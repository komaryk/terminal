.thumbnail
	flex-basis calc(25% - 30px)
	margin 15px
	padding 60px 0 25px
	display flex
	flex-direction column
	align-items center
	justify-content center
	background-color #fff
	box-sizing border-box
	border-radius 5px
	border 1px solid #d9dde5
	&__img
		margin-bottom 40px
	&__title
		color #383e49
		font-size 20px
		font-weight 400